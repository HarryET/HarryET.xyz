---
import ArrowDown from 'astro-heroicons/solid/ArrowDown.astro';
---
<div class="w-full h-full flex flex-col bg-bg">
	<!-- Blobs -->
	<div>
		<div class="absolute min-h-screen w-full z-30 flex flex-col justify-center items-center">
			<h1 class="text-white text-center text-8xl">
				Harry<br/>
				Bairstow
			</h1>
		</div>
		<div class="absolute min-h-screen w-full z-20 flex flex-col justify-end items-center">
			<div class="mb-[20px]">
				<ArrowDown class="h-12 w-12 text-white opacity-75 animate-bounce" />
			</div>
		</div>
		<div class="absolute z-10 min-h-screen w-full bg-gradient-to-b from-transparent to-bg"></div>
		<div class="min-h-screen w-full bg-[url('/assets/blobs.svg')] bg-center"></div>
	</div>
	<!-- Content -->
</div>
